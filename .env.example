# TicketScan Environment Variables
# Copy this file to .env and fill in your values
# Variables marked [REQUIRED] must be set for the app to start

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=development

# ===================
# Database [REQUIRED]
# ===================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/ticketscan

# ===================
# Authentication [REQUIRED]
# ===================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_a_secure_random_string_here

# Admin dashboard access key (min 32 characters recommended)
ADMIN_SECRET=generate_another_secure_random_string_here

# ===================
# Ticket APIs
# ===================
# Ticketmaster: https://developer.ticketmaster.com/
TICKETMASTER_API_KEY=your_ticketmaster_api_key

# SeatGeek: https://seatgeek.com/account/develop
SEATGEEK_CLIENT_ID=your_seatgeek_client_id

# StubHub: https://developer.stubhub.com/
STUBHUB_APP_KEY=your_stubhub_app_key
STUBHUB_API_KEY=your_stubhub_api_key

# Vivid Seats (optional)
VIVIDSEATS_API_KEY=

# ===================
# Email (SMTP) [REQUIRED for email features]
# ===================
# SiteGround: mail.yourdomain.com, port 465 (SSL) or 587 (TLS)
# Gmail: smtp.gmail.com, port 587, use App Password
SMTP_HOST=mail.ticketscan.io
SMTP_PORT=465
SMTP_USER=noreply@ticketscan.io
SMTP_PASS=your_email_password

# ===================
# Frontend URL (for email links)
# ===================
FRONTEND_URL=https://www.ticketscan.io
